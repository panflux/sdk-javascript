{
  "name": "@panflux/sdk",
  "version": "0.8.0",
  "description": "Software Development Kit for Panflux API consumers",
  "repository": "github:panflux/sdk-javascript",
  "author": "Niels Keurentjes <niels.keurentjes@omines.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf dist lib",
    "build": "run-s clean && run-p build:es build:cjs build:lib:es",
    "build:es": "NODE_ENV=es rollup -c",
    "build:cjs": "NODE_ENV=cjs rollup -c",
    "build:lib:es": "BABEL_ENV=es babel src -d lib",
    "lint": "eslint --fix src tests",
    "prepublishOnly": "run-p build test-insecure lint",
    "test": "jest --detectOpenHandles --forceExit",
    "test-insecure": "NODE_TLS_REJECT_UNAUTHORIZED=0 run-s test"
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "dependencies": {
    "apollo-link-context": "^1.0.9",
    "apollo-link-error": "^1.1.1",
    "apollo-link-http": "^1.5.7",
    "apollo-link-retry": "^2.2.5",
    "apollo-link-ws": "^1.0.9",
    "cross-fetch": "^3.0.0",
    "crypto-js": "^3.1.9-1",
    "crypto-random-string": "^3.0.1",
    "eventemitter3": "^4.0.0",
    "graphql": "^0.11.3 || ^0.12.3 || ^0.13.0 || ^14.0.0",
    "graphql-tag": "^2.10.0",
    "isomorphic-ws": "^4.0.1",
    "subscriptions-transport-ws": "^0.9.15"
  },
  "devDependencies": {
    "@babel/cli": "7.6.4",
    "@babel/core": "7.6.4",
    "@babel/plugin-external-helpers": "7.2.0",
    "@babel/preset-env": "7.6.3",
    "@types/graphql": "14.5.0",
    "@types/jest": "24.0.21",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.3",
    "babel-jest": "24.9.0",
    "dotenv": "8.2.0",
    "eslint": "6.6.0",
    "eslint-config-google": "0.14.0",
    "eslint-plugin-compat": "3.3.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "23.0.2",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "lint-staged": "9.4.2",
    "nock": "11.6.0",
    "npm-run-all": "4.1.5",
    "rollup": "1.26.0",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-filesize": "6.2.1",
    "ws": "7.2.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "lines": 50,
        "statements": -60
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
